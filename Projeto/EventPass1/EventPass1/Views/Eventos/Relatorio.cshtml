@model EventPass1.Models.Evento

@{
    ViewData["Title"] = "Relatorio";
}

<h1>@Model.NomeEvento</h1>

<div>
    <h4>Informações do evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeEvento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeEvento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalIngressos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalIngressos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.CPF)
        </dd>
        <dt class="col-sm-2">
            Ingressos disponíveis:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Disponiveis
        </dd>
        <dt class="col-sm-2">
            Ingressos reservados
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Reservados
        </dd>
    </dl>
</div>
<h5>Progresso das reservas</h5>
<div class="progress" style="height: 30px;">
    <div class="progress-bar" role="progressbar" style="width: @ViewBag.Percentual%;" aria-valuenow="@ViewBag.Percentual" aria-valuemin="0" aria-valuemax="100">@ViewBag.Percentual%</div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Voltar</a>
</div>
