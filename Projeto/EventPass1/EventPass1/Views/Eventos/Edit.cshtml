@model EventPass1.Models.Evento

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEvento" />
            <div class="form-group">
                <label asp-for="nomeEvento" class="control-label"></label>
                <input asp-for="nomeEvento" class="form-control" />
                <span asp-validation-for="nomeEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataHora" class="control-label"></label>
                <input asp-for="dataHora" class="form-control" />
                <span asp-validation-for="dataHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="totalIngressos" class="control-label"></label>
                <input asp-for="totalIngressos" class="form-control" />
                <span asp-validation-for="totalIngressos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GestorId" class="control-label"></label>
                <select asp-for="GestorId" class="form-control" asp-items="ViewBag.GestorId"></select>
                <span asp-validation-for="GestorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
