@model EventPass1.Models.Ingresso

@{
    ViewData["Title"] = "Edit";
}

<h1>Retirar</h1>

<h4>Ingresso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdEvento" class="control-label"></label>
                <select asp-for="IdEvento" class="form-control" asp-items="ViewBag.IdEvento"></select>
            </div>
                       
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-success" />
                <a class="btn btn-info" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
